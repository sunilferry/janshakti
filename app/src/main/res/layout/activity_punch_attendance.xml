<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:card_view="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="#E3E6E6"    android:orientation="vertical"    tools:context=".allactivities.PunchAttendanceActivity"    >    <RelativeLayout        android:id="@+id/iv_topview"        android:layout_width="match_parent"        android:layout_height="60dp"        android:background="@color/colorPrimary"        android:elevation="10dp">        <ImageView            android:id="@+id/iv_bck"            android:layout_width="25dp"            android:layout_height="25dp"            android:layout_centerVertical="true"            android:layout_marginStart="10dp"            android:layout_marginEnd="0dp"            android:adjustViewBounds="true"            android:contentDescription="@string/app_name"            app:srcCompat="@drawable/ic_arrow_back" />        <androidx.appcompat.widget.AppCompatTextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerInParent="true"            android:gravity="center"            android:text="@string/punch_attendance"            android:textColor="@color/white"            android:textSize="16sp"            app:fontFamily="@font/montserrat" />    </RelativeLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="match_parent">        <androidx.core.widget.NestedScrollView            android:layout_width="match_parent"            android:layout_height="match_parent">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="vertical">                <androidx.cardview.widget.CardView                    android:id="@+id/cardview_user_office"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:padding="5dp"                    android:visibility="visible"                    app:cardUseCompatPadding="true"                    card_view:cardElevation="5dp">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:orientation="vertical">                        <RelativeLayout                            android:id="@+id/rel_ll"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="20dp"                            android:orientation="horizontal"                            android:visibility="visible">                            <LinearLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_alignParentStart="true"                                android:layout_centerInParent="true"                                android:layout_marginStart="5dp"                                android:orientation="vertical"                                android:padding="10dp">                                <ImageView                                    android:layout_width="80dp"                                    android:layout_height="80dp"                                    android:contentDescription="@string/app_name"                                    android:src="@drawable/ic_your_location" />                                <TextView                                    android:id="@+id/locationname_txt"                                    android:layout_width="150dp"                                    android:layout_height="wrap_content"                                    android:layout_gravity="center"                                    android:fontFamily="@font/montserrat"                                    android:gravity="center"                                    android:textColor="@color/black"                                    android:textSize="10sp"                                    android:maxLines="2"                                    tools:ignore="SmallSp" />                            </LinearLayout>                            <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_centerInParent="true"                                android:layout_centerHorizontal="true"                                android:orientation="vertical">                                <TextView                                    android:id="@+id/distance_txt"                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_gravity="center"                                    android:fontFamily="@font/montserrat"                                    android:text="----"                                    android:textColor="@color/red_color"                                    android:textSize="14sp" />                                <ImageView                                    android:layout_width="match_parent"                                    android:layout_height="30dp"                                    android:layout_marginStart="120dp"                                    android:layout_marginEnd="120dp"                                    android:contentDescription="@string/app_name"                                    android:src="@drawable/ic_arrow" />                            </LinearLayout>                            <LinearLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_alignParentEnd="true"                                android:layout_centerInParent="true"                                android:layout_centerHorizontal="true"                                android:layout_marginEnd="5dp"                                android:orientation="vertical">                                <ImageView                                    android:layout_width="80dp"                                    android:layout_height="80dp"                                    android:layout_gravity="center"                                    android:contentDescription="@string/app_name"                                    android:src="@drawable/market_location" />                                <TextView                                    android:id="@+id/office_txt"                                    android:layout_width="wrap_content"                                    android:scrollHorizontally="false"                                    android:layout_height="wrap_content"                                    android:layout_gravity="center"                                    android:fontFamily="@font/montserrat"                                    android:text=""                                    android:textColor="@color/colorPrimary"                                    android:textSize="10sp"                                    android:textStyle="bold"                                    tools:ignore="SmallSp" />                            </LinearLayout>                        </RelativeLayout>                        <TextView                            android:id="@+id/distance_msg_tv"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_gravity="center"                            android:layout_marginBottom="10dp"                            android:fontFamily="@font/montserrat"                            android:text=""                            android:textColor="@color/red_color"                            android:textSize="14sp"                            android:visibility="visible" />                        <TextView                            android:id="@+id/show_txt"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_gravity="center"                            android:fontFamily="@font/montserrat"                            android:text="@string/ten_meters_tv"                            android:textColor="@color/black"                            android:textSize="8sp"                            android:layout_marginBottom="10dp"                            android:visibility="gone" />                    </LinearLayout>                </androidx.cardview.widget.CardView>                <androidx.cardview.widget.CardView                    android:id="@+id/no_lat_long_cv"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:padding="5dp"                    android:visibility="gone"                    app:cardUseCompatPadding="true"                    card_view:cardElevation="5dp">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="match_parent"                        android:orientation="vertical">                        <RelativeLayout                            android:layout_width="match_parent"                            android:layout_height="wrap_content"                            android:layout_marginTop="20dp">                            <LinearLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_alignParentStart="true"                                android:layout_centerInParent="true"                                android:layout_marginStart="5dp"                                android:orientation="vertical"                                android:padding="10dp">                                <ImageView                                    android:layout_width="80dp"                                    android:layout_height="80dp"                                    android:contentDescription="@string/app_name"                                    android:src="@drawable/ic_your_location" />                                <TextView                                    android:id="@+id/no_lat_long_tv"                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_gravity="center"                                    android:fontFamily="@font/montserrat"                                    android:gravity="center"                                    android:textColor="@color/black"                                    android:textSize="10sp"                                    android:textStyle="bold"                                    tools:ignore="SmallSp" />                            </LinearLayout>                            <LinearLayout                                android:layout_width="match_parent"                                android:layout_height="wrap_content"                                android:layout_centerInParent="true"                                android:layout_centerHorizontal="true"                                android:orientation="vertical">                                <TextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_gravity="center"                                    android:gravity="center"                                    android:fontFamily="@font/montserrat"                                    android:text="@string/no_office_attached_with_you_nplease_contact_to_nadministrator"                                    android:textColor="@color/red_color"                                    android:textSize="12sp" />                                <ImageView                                    android:layout_width="match_parent"                                    android:layout_height="30dp"                                    android:layout_marginStart="120dp"                                    android:layout_marginEnd="120dp"                                    android:contentDescription="@string/app_name"                                    android:src="@drawable/ic_arrow" />                            </LinearLayout>                            <LinearLayout                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"                                android:layout_alignParentEnd="true"                                android:layout_centerInParent="true"                                android:layout_centerHorizontal="true"                                android:layout_marginEnd="5dp"                                android:orientation="vertical">                                <ImageView                                    android:layout_width="80dp"                                    android:layout_height="80dp"                                    android:layout_gravity="center"                                    android:contentDescription="@string/app_name"                                    android:src="@drawable/market_location" />                                <TextView                                    android:layout_width="wrap_content"                                    android:layout_height="wrap_content"                                    android:layout_gravity="center"                                    android:fontFamily="@font/montserrat"                                    android:text="@string/no_near_office_found"                                    android:textColor="@color/colorPrimary"                                    android:textSize="10sp"                                    android:textStyle="bold"                                    tools:ignore="SmallSp" />                            </LinearLayout>                        </RelativeLayout>                    </LinearLayout>                </androidx.cardview.widget.CardView>                <androidx.cardview.widget.CardView                    android:id="@+id/punch_card"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:padding="5dp"                    android:visibility="gone"                    app:cardUseCompatPadding="true"                    card_view:cardElevation="5dp">                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:orientation="vertical"                        android:visibility="visible">                        <TextView                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_gravity="center"                            android:layout_margin="10dp"                            android:fontFamily="@font/montserrat"                            android:text="@string/make_attendance"                            android:textColor="@color/red_color"                            android:textSize="14sp"                            android:textStyle="bold" />                        <RadioGroup                            android:layout_margin="20dp"                            android:id="@+id/in_out_group"                            android:orientation="horizontal"                            android:layout_gravity="center_horizontal"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content">                            <RadioButton                                android:id="@+id/in_radio"                                android:text="@string/punch_in"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"/>                            <RadioButton                                android:id="@+id/out_radio"                                android:layout_marginStart="100dp"                                android:text="@string/punch_out"                                android:layout_width="wrap_content"                                android:layout_height="wrap_content"/>                        </RadioGroup>                        <TextView                            android:layout_marginTop="20dp"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_marginStart="10dp"                            android:layout_marginEnd="0dp"                            android:fontFamily="@font/montserrat"                            android:padding="5dp"                            android:text="@string/capture_selfie"                            android:textColor="@color/black"                            android:textSize="12sp"                            android:textStyle="normal"                            tools:ignore="HardcodedText" />                        <ImageView                            android:maxHeight="100dp"                            android:id="@+id/iv_add_images"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:layout_gravity="center"                            android:layout_marginTop="30dp"                            android:adjustViewBounds="true"                            android:contentDescription="@string/app_name"                            app:srcCompat="@drawable/ic_camera" />                        <TextView                            android:visibility="gone"                            android:id="@+id/wrong_photo_msg_tv"                            android:layout_marginTop="30dp"                            android:gravity="center"                            android:textColor="@color/red"                            android:textStyle="bold"                            android:text="@string/wrong_photo"                            android:layout_gravity="center"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"/>                        <Button                            android:id="@+id/btn_submit"                            android:text="@string/submit"                            android:enabled="false"                           android:layout_margin="20dp"                            android:layout_width="match_parent"                            android:layout_height="wrap_content"/>                    </LinearLayout>                </androidx.cardview.widget.CardView>            </LinearLayout>        </androidx.core.widget.NestedScrollView>        <TextView            android:visibility="gone"            android:id="@+id/show_net_tv"            android:layout_margin="16sp"            android:gravity="center"            android:textStyle="bold"            android:textSize="18sp"            android:textColor="@color/red"            android:layout_alignParentBottom="true"            android:text="@string/slow_internet"            android:layout_width="match_parent"            android:layout_height="wrap_content"/>    </RelativeLayout></LinearLayout>